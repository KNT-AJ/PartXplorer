{
  "name": "partxplorer",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "setup": "npm install",
    "dev": "run-p -l backend:dev frontend:dev",
    "backend:dev": "npm --workspace backend run dev",
    "frontend:dev": "npm --workspace frontend run dev",
    "build": "run-s build:*",
    "build:backend": "npm --workspace backend run build",
    "build:frontend": "npm --workspace frontend run build",
    "test": "run-s test:*",
    "test:backend": "npm --workspace backend run test",
    "test:frontend": "npm --workspace frontend run test",
    "lint": "run-s lint:*",
    "lint:backend": "npm --workspace backend run lint",
    "lint:frontend": "npm --workspace frontend run lint",
    "typecheck": "run-s typecheck:*",
    "typecheck:backend": "npm --workspace backend run typecheck",
    "typecheck:frontend": "npm --workspace frontend run typecheck"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.2"
  }
}